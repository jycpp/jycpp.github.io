<% if(theme.post.toc.enable && theme.post.toc.placement === 'left' && page.toc !== false){ %>
  <aside class="sidebar" style="padding-left: 2rem; margin-right: -1rem">
    <%- partial('_partials/post/toc') %>

  </aside>
<% } else if (theme.post.category_bar.enable && theme.post.category_bar.placement !== 'right' && !page.hide &&
  (!theme.post.category_bar.specific || (theme.post.category_bar.specific && !page.category_bar_hide))) { %>
  <aside class="sidebar category-bar" style="margin-right: -1rem">
    <%- partial('_partials/post/category-bar') %>

    <% if (theme.ad_block_on_website.enable && theme.ad_block_on_website.ad_on_post_left) { %>
      <div>
        <%- theme.ad_block_on_website.ad_on_post_left %>
      </div>
    <% } %>

  </aside>
<% } %>

